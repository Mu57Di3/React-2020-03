{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "Constants/*": ["src/constants/*"],
      "UI": ["src/ui/index"],
      "Components": ["src/components/index"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
    "./*.js"
  ]
}
