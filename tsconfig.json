{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "lodash",
      "node",
      "jest",
      "react",
      "react-dom",
      "enzyme",
      "jsdom",
      "classnames"
    ],
    "baseUrl": "./",
    "paths": {
      "Constants/*": ["src/constants/*"],
      "UI": ["src/ui/index"],
      "Components": ["src/components/index"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
    "./*.js"
  ]
}
